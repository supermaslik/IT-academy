@using FirstTest.Models;
@model List<FirstTest.Models.ImageLinkInfo>



@if(Model.Count == 0)
{
    <div class="row">
        <div class="col-md-offset-3 col-md-6 col-md-offset-3">
            <p>Nothing on a page</p>
        </div>
    </div>
}


@foreach (var obj in Model)
{
<div class="text-center img-rounded" style="background-color:#e1e1e1; border:2px groove #e1e1e1; margin-bottom:20px;">
    <div class="row">
        <div class="col-md-offset-4 col-md-4 col-md-offset-4">
        <p class="lead">@obj.Title</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-7">
            <p>@obj.Description</p>
        </div>

        <div class="col-md-5">
            <img src=@obj.ImageUrl class="img-responsive img-thumbnail pull-left">
        </div>
    </div>

    <div class="row">
        <div class="col-md-5 col-lg-offset-7">
            <a href=@obj.SiteUrl class="btn btn-info" role="button">Site</a>
            @Html.ActionLink("Edit", "EditData", "Home", new { id = obj.Id}, new { @class = "btn btn-primary" })
            @Html.ActionLink("Delete", "DeleteData", "Home", new { id = obj.Id}, new { @class = "btn btn-danger" })
            <br />
            <br />
        </div>
    </div>
    <br />
    <br />
    </div>
}

